<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.MyOnlineLibrary.BookPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="nameEntry" Text="{Binding Path=Name}" Placeholder="Название книги"  />
            <Entry x:Name="authorEntry" Text="{Binding Path=Author}" Placeholder="Автор книги"/>
            <Entry x:Name="genreEntry" Text="{Binding Path=Genre}" Placeholder="Жанр книги"/>
            <Button x:Name="ButtonSaveBook" Text="Сохранить" Clicked="ButtonSaveBook_OnClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>